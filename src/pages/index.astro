---
// Type imports
import type { QuoteFrontmatter } from '@lib/types';

// Layout imports
import Base from '../layouts/Base.astro';






const posts = await Astro.glob<QuoteFrontmatter>('./quotes/**/*.md');
---

<Base title="Quoke &mdash; a few quotations">
{posts.map(post => (
<div class="quote">
  <div class="text">{post.frontmatter.text}</div>
  <div class="author">&mdash; {post.frontmatter.author}</div>
  <div class="source">{post.frontmatter.source}</div>
</div>
))}
</Base>

<style lang="scss">
  .quote {
    margin-bottom: 2em;
  }

  .text {
    margin-bottom: 1em;
  }

  .author {
    font-weight: bold;
  }

  .source {
    margin-top: .25em;
    opacity: .7;
  }
</style>