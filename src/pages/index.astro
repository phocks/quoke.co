---
// Type imports
import type { QuoteFrontmatter } from '@lib/types';

// Layout imports
import Base from '../layouts/Base.astro';






const posts = await Astro.glob<QuoteFrontmatter>('./quotes/**/*.md');
---

<Base title="Quoke &mdash; a few quotations">
  {posts.map(post => <div class="quote">{post.frontmatter.text}</div>)}
</Base>

<style lang="scss">
  .quote {
    margin-bottom: 1em;
  }
</style>